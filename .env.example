# ============================================
# APPLICATION
# ============================================
NODE_ENV=development
APP_NAME=AfriCom API
APP_VERSION=1.0.0
APP_PORT=3000
APP_HOST=0.0.0.0
APP_URL=http://localhost:3000

# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://user:password@localhost:5432/africom_db?schema=public"
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30000

# ============================================
# REDIS / CACHE
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TLS=false
CACHE_TTL=3600

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=30d
API_KEY_PREFIX=ak_live_
API_KEY_LENGTH=32
BCRYPT_ROUNDS=10

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# ============================================
# AFRICA CONFIGURATION
# ============================================
DEFAULT_COUNTRY=GH
DEFAULT_CURRENCY=GHS
DEFAULT_TIMEZONE=Africa/Accra
DEFAULT_LANGUAGE=en
SUPPORTED_COUNTRIES=GH,NG,KE,ZA,UG,TZ,RW,CI,SN,CM

# ============================================
# SMS PROVIDERS
# ============================================
# Telecel Ghana
TELECEL_API_KEY=
TELECEL_API_SECRET=
TELECEL_SENDER_ID=

# MTN
MTN_API_KEY=
MTN_API_SECRET=
MTN_SENDER_ID=

# Vodacom
VODACOM_API_KEY=
VODACOM_API_SECRET=

# Orange
ORANGE_API_KEY=
ORANGE_API_SECRET=

# Africa's Talking (Fallback)
AFRICASTALKING_API_KEY=
AFRICASTALKING_USERNAME=

# ============================================
# VOICE PROVIDERS
# ============================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

AFRICASTALKING_VOICE_KEY=

# ============================================
# EMAIL CONFIGURATION
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_NAME=AfriCom
SMTP_FROM_EMAIL=noreply@africom.com

# SendGrid (Optional)
SENDGRID_API_KEY=

# ============================================
# WHATSAPP
# ============================================
WHATSAPP_BUSINESS_API_KEY=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_BUSINESS_ACCOUNT_ID=
WHATSAPP_ACCESS_TOKEN=

# ============================================
# PUSH NOTIFICATIONS
# ============================================
FCM_SERVER_KEY=
FCM_PROJECT_ID=
APNS_KEY_ID=
APNS_TEAM_ID=
APNS_BUNDLE_ID=

# ============================================
# PAYMENT PROVIDERS (Africa)
# ============================================
# Paystack
PAYSTACK_SECRET_KEY=
PAYSTACK_PUBLIC_KEY=
PAYSTACK_WEBHOOK_SECRET=

# Flutterwave
FLUTTERWAVE_SECRET_KEY=
FLUTTERWAVE_PUBLIC_KEY=
FLUTTERWAVE_ENCRYPTION_KEY=

# Stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ============================================
# STORAGE
# ============================================
STORAGE_DRIVER=local
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_BUCKET=

# ============================================
# WEBHOOKS
# ============================================
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=10000
WEBHOOK_MAX_RETRIES=3

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_FILES=10
LOG_MAX_SIZE=10m

# ============================================
# MONITORING
# ============================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# ============================================
# CORS
# ============================================
CORS_ORIGIN=*
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS

# ============================================
# FEATURES
# ============================================
ENABLE_API_DOCS=true
ENABLE_WEBHOOKS=true
ENABLE_RATE_LIMITING=true
ENABLE_CACHING=true
ENABLE_QUEUE=true

# ============================================
# BILLING
# ============================================
DEFAULT_CREDIT_RATE=1.0
LOW_BALANCE_THRESHOLD=10.0
AUTO_RECHARGE_ENABLED=false
MIN_TOPUP_AMOUNT=10.0

# ============================================
# PRICING (GHS per unit)
# ============================================
SMS_RATE_GHANA=0.035
SMS_RATE_NIGERIA=0.06
SMS_RATE_KENYA=0.05
SMS_RATE_SOUTH_AFRICA=0.07
EMAIL_RATE=0.02
VOICE_RATE_PER_MINUTE=0.20
WHATSAPP_RATE=0.08
PUSH_RATE=0.01
LOOKUP_RATE=0.03